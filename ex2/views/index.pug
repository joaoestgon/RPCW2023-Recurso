extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Index List of Repairs
    .w3-container
      table.w3-table-all
        tr
          th Id 
          th Data
          th Nome
          th Matrícula 
          th marca 
          th Nr. de Intervenções
        each v in vs
          tr
            td
              a(href="/" + v._id)=v._id
            td=v.data
            td=v.nome
            td=v.viatura.matricula
            td
              a(href="/marca/" + v.viatura.marca)=v.viatura.marca
            td=v.nr_intervencoes
